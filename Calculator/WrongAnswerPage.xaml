<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.WrongAnswerPage"
             Title="WrongAnswerPage"
             BackgroundColor="{DynamicResource PrimaryColor}">
    <VerticalStackLayout>
        <Label 
            Text="Your Answer was wrong"
            TextColor="{DynamicResource PrimaryTextColor}"
            VerticalOptions="Center" 
            Margin="18"
            HorizontalOptions="Center" />
        <Button Text="Try Again" Clicked="trySameQuestionAgain" Margin="18"/>
        <Button Text="Skip to Next Question" Clicked="navigateToNextQuestion" Margin="18"/>
    </VerticalStackLayout>
</ContentPage>