<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.ExamPage"
             Title="ExamPage"
              BackgroundColor="{DynamicResource PrimaryColor}">
    <VerticalStackLayout>
        <Label x:Name="questionText" TextColor="{DynamicResource PrimaryTextColor}" FontSize="64" FontAttributes="Bold" ></Label>
        <Button x:Name="optionOneBtn" Clicked="optionBtn_Clicked"></Button>
        <Button x:Name="optionTwoBtn" Clicked="optionBtn_Clicked"></Button>
        <Button x:Name="optionThreeBtn" Clicked="optionBtn_Clicked"></Button>
        <Label x:Name="messageTxt" TextColor="{DynamicResource PrimaryTextColor}" FontSize="24" FontAttributes="Italic" ></Label>
    </VerticalStackLayout>
</ContentPage>