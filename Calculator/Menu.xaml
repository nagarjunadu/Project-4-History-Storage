<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Menu"
             Title="Menu"
             BackgroundColor="{DynamicResource PrimaryColor}">

    <Grid Padding="1" RowSpacing="3" ColumnSpacing="1"
          RowDefinitions="*,*,*,*"
          ColumnDefinitions="*">

        <Button Text="Light" Grid.Row="0" Grid.Column="0"
                BorderWidth="3" WidthRequest="200" HeightRequest="50" Clicked="OnLightEvent" BorderColor="{StaticResource violet}"></Button>


        <Button Text="Dark" Grid.Row="1" Grid.Column="0" TextColor="AntiqueWhite" BackgroundColor="Black"
                BorderWidth="3" WidthRequest="200" HeightRequest="50" Clicked="OnDarkEvent" BorderColor="{StaticResource violet}"></Button>
        <Button Text="Green" Grid.Row="2" Grid.Column="0" TextColor="Aqua" BackgroundColor="Green"
                BorderWidth="3" WidthRequest="200" HeightRequest="50" Clicked="OnGreenEvent" BorderColor="{StaticResource violet}"></Button>
        <Button Text="Pink" Grid.Row="3" Grid.Column="0" TextColor="Black" BackgroundColor="Pink"
                BorderWidth="3" WidthRequest="200" HeightRequest="50" Clicked="OnPinkEvent" BorderColor="{StaticResource violet}"></Button>
        


    </Grid>
</ContentPage>